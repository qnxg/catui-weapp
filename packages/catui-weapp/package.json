{
  "name": "catui-weapp",
  "version": "0.0.0",
  "description": "UI组件库",
  "keywords": [
    "UI",
    "mini-program"
  ],
  "author": "wangjq4214 <w1637894214@163.com>",
  "homepage": "https://github.com/qnxg/catui-weapp/tree/master/packages/catui-weapp#readme",
  "license": "MIT",
  "module": "dist/index.esm.js",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "sideEffects": [
    "*.scss",
    "*.css"
  ],
  "types": "./types/index.d.ts",
  "files": [
    "lib",
    "dist",
    "types"
  ],
  "publishConfig": {
    "registry": "https://registry.npm.taobao.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qnxg/catui-weapp.git"
  },
  "scripts": {
    "dev": "yarn run dev:lib",
    "dev:lib": "tsc --project ./tsconfig.build.json --watch --incremental",
    "build": "yarn run build:rollup && yarn run build:lib",
    "build:lib": "tsc --project ./tsconfig.build.json",
    "build:rollup": "rollup --config rollup.config.js",
    "prepublishOnly": "yarn run clean && yarn run build",
    "clean": "rimraf .temp dist lib coverage"
  },
  "bugs": {
    "url": "https://github.com/qnxg/catui-weapp/issues"
  },
  "peerDependencies": {
    "@tarojs/components": ">=3",
    "@tarojs/react": ">=3",
    "react": ">=16.13.0",
    "react-dom": ">=16.13.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "rollup": "^2.35.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-typescript2": "^0.29.0"
  }
}
